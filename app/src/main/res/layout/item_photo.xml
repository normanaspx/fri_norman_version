<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imgCard"
        android:layout_height="match_parent">
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/gradient"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/imgCard"
        />

    <TextView
        android:layout_width="wrap_content"
        tools:text="username"
        android:layout_margin="8dp"
        android:id="@+id/username"

        android:gravity="center"
        android:textColor="#fff"
        android:layout_alignBottom="@id/imgCard"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/imgCard"
        android:layout_alignBottom="@id/imgCard"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_favorite_border_24px"
        app:tint="#fff" />
    <TextView
        android:layout_width="wrap_content"
        tools:text="144"
        android:gravity="center"
       android:id="@+id/txtLikes"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/imgFav"
        android:textColor="#fff"
        app:drawableStartCompat="@drawable/ic_thumb_up_off_alt_24px"
        android:layout_alignBottom="@id/imgCard"
        android:layout_height="wrap_content"/>


</RelativeLayout>